{{#block "user"}}
  {{#if loggedIn}}
    <div class="dropdown">
      <button
        class="btn btn-secondary dropdown-toggle" type="button" id="user-dropdown" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false"
      >
        {{userName}}
      </button>
      <div class="dropdown-menu" aria-labelledby="user-dropdown">
        <div class="dropdown-item-text">
          {{#if isClient}}
            <span class="badge badge-info">
               {{lang.client}}
            </span>
          {{/if}}
          {{#if isEmployee}}
            <span class="badge badge-warning">
              {{lang.employee}}
            </span>
          {{/if}}
          {{#if isAdmin}}
            <span class="badge badge-danger">
              {{lang.admin}}
            </span>
          {{/if}}
        </div>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{webContextPath}}/account/details">
          {{lang.myProfile}}
        </a>
        <a class="dropdown-item" href="{{webContextPath}}/account/edit-password">
          {{lang.changePassword}}
        </a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{webContextPath}}/logout">
          {{lang.logout}}
        </a>
      </div>
      {{> "layout/menus/loginStat"}}
    </div>
  {{else}}
    <a href="{{webContextPath}}/login" class="btn btn-secondary mr-1">
      {{lang.loginAction}}
    </a>
    <a href="{{webContextPath}}/register" class="btn btn-secondary">
      <i class="fas fa-user-plus"></i>
      {{lang.registerAction}}
    </a>
  {{/if}}
{{/block}}
