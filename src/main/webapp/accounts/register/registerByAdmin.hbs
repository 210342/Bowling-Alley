{{#partial "content"}}
    <div class="container">
        <div class="w-75">
            {{> "accounts/register/alertDanger"}}
            <form class="form-horizontal" role="form" method="post">
                {{> "accounts/register/registerClientForm"}}
                <label class="col-sm-3 control-label">Access Levels *</label>
                <div class="form-group">
                    <div>
                        <label for="clientRole" class="control-label">client:</label>
                        <input type="checkbox" name="clientSelected" value="true">
                    </div>
                </div>
                <div class="form-group">

                    <div>
                        <label for="clientRole" class="control-label">employee:</label>
                        <input type="checkbox" name="employeeSelected" value="true">
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label for="clientRole" class="control-label">admin:</label>
                        <input type="checkbox" id="admin" name="adminSelected" value="true">
                    </div>
                </div>
                {{> "accounts/register/submitButton"}}
            </form>
        </div>
    </div>
{{/partial}}
{{> layout }}
