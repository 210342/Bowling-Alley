{{#block "alleyNumberInput"}}
    <div class="input-group mb-3 mx-0">
        <div class="input-group-prepend">
            <span class="input-group-text">{{lang.alleyNumber}} {{#if isRequired}}*{{/if}}</span>
        </div>
        <select class="custom-select" name="alleyNumber" id="alleyNumber" aria-label="alleyNumber" {{#if isRequired}}required{{/if}}>
            {{#each data.availableAlleyNumbers}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <div class="input-group-append">
            <button type="submit" class="btn btn-block btn-primary btn-sm"
                onclick="form.method='post'; form.action='{{webContextPath}}/{{reservationContext}}/available-alleys?redirectTo={{formType}}{{#if idFromUri}}&resId={{idFromUri}}{{/if}}';">
                {{lang.showAvailableAlleys}}
            </button>
        </div>
    </div>
{{/block}}
